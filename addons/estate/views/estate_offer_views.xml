<odoo>
  <record id="view_estate_offer_list" model="ir.ui.view">
    <field name="name">estate.property.offer.list</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <list>
        <field name="property_id"/>
        <field name="partner_id"/>
        <field name="price"/>
        <field name="status"/>
        <field name="validity"/>
      </list>
    </field>
  </record>

  <record id="view_estate_offer_form" model="ir.ui.view">
    <field name="name">estate.property.offer.form</field>
    <field name="model">estate.property.offer</field>
    <field name="arch" type="xml">
      <form string="Offer">
        <header>
          <button name="action_accept" type="object" string="Accept"
                  modifiers="{'invisible': [('status','!=','new')]}"/>
          <button name="action_refuse" type="object" string="Refuse"
                  modifiers="{'invisible': [('status','!=','new')]}"/>
        </header>
        <sheet>
          <group>
            <field name="property_id" required="1"/>
            <field name="partner_id" required="1"/>
            <field name="price"/>
            <field name="currency_id" invisible="1"/>
            <field name="status" readonly="1"/>
            <field name="validity"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_estate_offer" model="ir.actions.act_window">
    <field name="name">Offers</field>
    <field name="res_model">estate.property.offer</field>
    <field name="view_mode">list,form</field>
  </record>
</odoo>
