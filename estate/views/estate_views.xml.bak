<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- List view -->
  <record id="view_estate_property_list" model="ir.ui.view">
    <field name="name">estate.property.list</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="property_type_id"/>
        <field name="expected_price"/>
        <field name="bedrooms"/>
        <field name="garden"/>
        <field name="garden_orientation"/>
        <field name="salesperson_id"/>
        <field name="buyer_id"/>
      </list>
    </field>
  </record>

  <!-- Form view -->
  <record id="view_estate_property_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="description"/>
            <field name="postcode"/>
            <field name="date_availability"/>

            <!-- Day 7 relations -->
  	    <field name="property_type_id"/>
            <field name="tag_ids" widget="many2many_tags"/>
            <field name="salesperson_id"/>
            <field name="buyer_id"/>

            <!-- Prices --> 
            <field name="expected_price"/>
            <field name="selling_price" readonly="1"/>

            <!-- Day 8 computed -->
            <field name="total_area" readonly="1"/>
            <field name="best_price" readonly="1"/>

            <!-- Other details -->
            <field name="bedrooms"/>
            <field name="living_area"/>
            <field name="facades"/>
            <field name="garage"/>
            <field name="garden"/>
            <field name="garden_area" modifiers='{"invisible": [["garden","=",false]]}'/>
            <field name="garden_orientation" modifiers='{"invisible": [["garden","=",false]]}'/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Search view -->
  <record id="view_estate_property_search" model="ir.ui.view">
    <field name="name">estate.property.search</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" string="Title"/>
        <filter name="has_garden" string="Has Garden" domain="[('garden','=',True)]"/>
        <filter name="no_garden"  string="No Garden"  domain="[('garden','=',False)]"/>
        <field name="bedrooms" string="Bedrooms"/>
        <filter name="bedrooms_3_plus" string="3+ Bedrooms" domain="[('bedrooms','>=',3)]"/>
        <group expand="0" string="Orientation">
          <filter name="orient_n" string="North" domain="[('garden_orientation','=','north')]"/>
          <filter name="orient_s" string="South" domain="[('garden_orientation','=','south')]"/>
          <filter name="orient_e" string="East"  domain="[('garden_orientation','=','east')]"/>
          <filter name="orient_w" string="West"  domain="[('garden_orientation','=','west')]"/>
        </group>
      </search>
    </field>
  </record>

  <!-- Action + Menus -->
  <record id="action_estate_property" model="ir.actions.act_window">
    <field name="name">Properties</field>
    <field name="res_model">estate.property</field>
    <field name="view_mode">list,form</field>
    <field name="search_view_id" ref="view_estate_property_search"/>
  </record>

  <menuitem id="menu_estate_root" name="Estate"/>
  <menuitem id="menu_estate_property" name="Properties"
            parent="menu_estate_root" action="action_estate_property"/>


<header>
  <button name="action_mark_sold"
          type="object"
          string="Mark Sold"
          class="oe_highlight"
          modifiers='{"invisible": [["state","in",["sold","canceled"]]]}'/>

  <button name="action_mark_canceled"
          type="object"
          string="Cancel"
          class="btn-secondary"
          modifiers='{"invisible": [["state","in",["sold","canceled"]]]}'/>

  <field name="state" widget="statusbar"
         statusbar_visible="new,sold,canceled"
         readonly="1"/>
</header>

</odoo>
