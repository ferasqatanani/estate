<odoo>
  <!-- LIST with decorations + stat columns -->
  <record id="view_estate_property_list" model="ir.ui.view">
    <field name="name">estate.property.list</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <list decoration-success="state == 'sold'"
            decoration-danger="state == 'canceled'"
            decoration-warning="state == 'offer_received'">
        <field name="name"/>
        <field name="state"/>
        <field name="salesperson_id"/> <!-- added -->
        <field name="expected_price"/>
        <field name="selling_price"/>
        <field name="property_type_id"/>
        <field name="offers_count"/>
        <field name="best_price"/>
      </list>
    </field>
  </record>

  <!-- FORM: stat buttons + inline editable offers -->
  <record id="view_estate_property_form" model="ir.ui.view">
    <field name="name">estate.property.form</field>
    <field name="model">estate.property</field>
    <field name="arch" type="xml">
      <form string="Property">
        <header>
          <button name="action_mark_sold" type="object" string="Sell" class="btn-primary"
                  modifiers="{'invisible': ['|', ('state', 'in', ('sold','canceled')), ('offers_count','=',0)]}"/>
          <button name="action_mark_canceled" type="object" string="Cancel"
                  modifiers="{'invisible': [('state', 'in', ('sold','canceled'))]}"/>

          <!-- Stat buttons -->
          <button class="oe_stat_button" type="object" name="action_open_offers" icon="fa-gavel"
                  modifiers="{'invisible': [('offers_count','=',0)]}">
            <field name="offers_count" widget="statinfo" string="Offers"/>
          </button>
          <button class="oe_stat_button" type="object" name="action_open_best_offer" icon="fa-line-chart"
                  modifiers="{'invisible': [('best_price','=',0)]}">
            <field name="best_price" widget="statinfo" string="Best Offer"/>
          </button>
        </header>

        <sheet>
          <group>
            <field name="name"/>
            <field name="state" readonly="1"/>
            <field name="salesperson_id"/> <!-- added -->
            <field name="currency_id"/>
            <field name="expected_price" widget="monetary" options="{'currency_field': 'currency_id'}"
                   modifiers="{'readonly': [('state','in',('sold','canceled'))]}"/>
            <field name="selling_price" widget="monetary" options="{'currency_field': 'currency_id'}" readonly="1"/>
            <field name="property_type_id"/>
          </group>

          <group string="Details">
            <field name="bedrooms"/>
            <field name="living_area"/>
            <field name="facades"/>
            <field name="garage"/>
            <field name="garden"/>
            <field name="garden_area"/>
            <field name="garden_orientation"/>
          </group>

          <notebook>
            <page string="Offers">
              <field name="offer_ids">
                <list editable="bottom">
                  <field name="partner_id" options="{'no_create_edit': True}"/>
                  <field name="price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                  <field name="currency_id" invisible="1"/>
                  <field name="status"/>
                  <field name="validity"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>
